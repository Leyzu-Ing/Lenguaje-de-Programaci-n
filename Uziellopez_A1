//Añadimos las librerias correspondientes
#include <iostream>
#include <stdio.h>

using namespace std;

int main()
{
	int edad;
	std::cout << "Ingrese su edad en el Programa: ";
	std::cin >> edad;
	if (edad >= 18) {
		std::cout << "La edad seleccionada indica que eres mayor de edad: " << std::endl;
	}
	else {
		std::cout << "La edad seleccionada indica que eres menor de edad: " << std::endl;
	}
	return 0;
}
